<Window x:Class="todoLIST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="920" Icon="logo.ico">

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="30"
                                  GlassFrameThickness="0"
                                  CornerRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="testButtonTemplate2">
            <Border Name="RootElement">
                <Border.Background>
                    <SolidColorBrush x:Name="BorderBrush" Color="Transparent"/>
                </Border.Background>

                <Grid Margin="4" >
                    <Grid.Background>
                        <SolidColorBrush x:Name="ButtonBackground" Color="Transparent"/>
                    </Grid.Background>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="0,0,0,0"/>
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground" Storyboard.TargetProperty="Color" To="#5858584d" Duration="0:0:0" FillBehavior="HoldEnd"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>
    </Window.Resources>


    <Border Background="#1E1E1E" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width ="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.ColumnSpan="3" Background="#262626"/>
            <Grid Grid.Row="3" Background="#262626"/>

            <StackPanel Grid.Row="1"
            x:Name="ChekboxPanel"
            Grid.Column="1"
            Background="Transparent" Margin="50, 100, 10, 20"/>

            <Button
            Template="{StaticResource testButtonTemplate2}" 
            Grid.Column="1" Grid.Row="1" Width="90" Height="25" Margin="10,58,558,462" 
            Content="➕ New task"
            Click="Button_Click" FontSize="15" FontWeight="Light" FontFamily="Aerial" Background="Transparent" Foreground="#808080" BorderThickness="0">
            </Button>


            <Button Template="{StaticResource testButtonTemplate2}"
                HorizontalAlignment="Right" Height="25" Margin="0,5,5,0" VerticalAlignment="Top" Width="25" Click="CloseButtonClick" WindowChrome.IsHitTestVisibleInChrome="True" Grid.Column="1" Background="Transparent" BorderThickness="0">
                <Image Source="x.png"/>
            </Button>

            <Button Template="{StaticResource testButtonTemplate2}"
                   HorizontalAlignment="Right" Height="25" Margin="0,5,55,0" VerticalAlignment="Top" Width="25" Click="HideButtonClick" WindowChrome.IsHitTestVisibleInChrome="True" Grid.Column="1" BorderThickness="0" Background="Transparent">
                <Image Source ="minus.png"/>
            </Button>

            <Button Template="{StaticResource testButtonTemplate2}"
                 HorizontalAlignment="Right" Height="25" Margin="0,5,30,0" VerticalAlignment="Top" Width="25" Click="FullScreanButtonClick" WindowChrome.IsHitTestVisibleInChrome="True" Grid.Column="1" Background="Transparent" BorderThickness="0">
                <Image Source ="maximize.png"/>
            </Button>
        </Grid>
    </Border>

</Window>
